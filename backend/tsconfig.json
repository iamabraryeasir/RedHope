{
    "compilerOptions": {
        "types": ["node", "express"],
        "target": "ES2019",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",

        "baseUrl": "src",
        "paths": { "@/*": ["*"] },

        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/interfaces/index.d.ts"],
    "exclude": ["node_modules"]
}
